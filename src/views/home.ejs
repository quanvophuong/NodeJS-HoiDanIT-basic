<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home Page</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
<div class="topnav">
    <a href="/" class="active">Home</a>
    <a href="/create">Create Users</a>
</div>

<h2>List Users</h2>

<table>
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Name</th>
        <th>City</th>
        <th>Action</th>
    </tr>
    <% listUsers.forEach(function(user,index){%>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.city %></td>
            <td>
                <a href="/update/<%=user.id%>">Edit</a>
                <a href="/delete-user/<%=user.id%>">Delete</a>
            </td>
        </tr>
    <% }) %>
</table>
</body>
</html>